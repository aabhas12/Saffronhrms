<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="loginPage" parent="android:Theme.Light">
        <item name="android:ems">15</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColor">@color/loginTextColor</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="detailsFrame" parent="android:Theme.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center|top</item>
    </style>

    <style name="detailsInfoValue" parent="android:Theme.Light">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/detailsInfoValClr</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="detailsInfoLbl" parent="android:Theme.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- Css for List page -  starts here -->
    <style name="listPage" parent="android:Theme.Light">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- Css for List page - ends here -->

</resources>